					<li class="nav-item"><a class="nav-link" href="/Home/Volunteer">Volunteer</a></li>
				</ul>

				<ul class="side-nav" id="sidebar_nav">
					<li class="side-item"><a class="side-link" href="/Home/Meet">Meet the pups</a></li>
					<li class="side-item"><a class="side-link" href="/Home/Adopt">Adopt</a></li>
					<li class="side-item"><a class="side-link" href="/Home/Foster">Foster</a></li>
					<li class="side-item"><a class="side-link" href="/Home/Volunteer">Volunteer</a></li>
					<li class="side-item"><a class="side-link" href="/Home/About">About</a></li>
					<li class="side-item"><a class="side-link" href="/Home/Blog">Blog</a></li>
					<li class="side-item"><a class="side-link" href="/Home/Contact">Contact</a></li>
					<li class="side-item"><a class="side-link" href="/Home/Donate">Donate</a></li>
				</ul>
				
				<ul id="nav-mobile" class="right hide-on-med-and-down">
					<li class="nav-item"><a class="nav-link" href="/Home/About">About</a></li>
					<li class="nav-item"><a class="nav-link" href="/Home/Blog">Blog</a></li>
					<li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
					<li class="nav-item"><a class="nav-link" href="/Home/Donate">Donate</a></li>
				</ul>
			</div>
		</nav>
    </header>
		
    <main class="container">
		<h2 class="title">@RenderSection("Title")</h2>
			
		<div class="body-content" id="content">	
	    	@RenderBody()
		</div>
	</main>

    @* Bootstrap JS files *@
	<script src="https://code.jquery.com/jquery-3.2.1.js" integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>

	@RenderSection("PageScripts", false)
</body>
</html>
